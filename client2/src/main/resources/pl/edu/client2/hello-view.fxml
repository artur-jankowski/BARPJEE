<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.client2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" prefHeight="18.0" prefWidth="1063.0" text="BARNPJEE CHAT" />
   <TextField fx:id="userInput" promptText="Username" />
   <ScrollPane fx:id="scroll" prefHeight="378.0" prefWidth="406.0">
      <content>
         <HBox>
            <children>
               <VBox fx:id="chatVBox" prefHeight="371.0" prefWidth="665.0" />
               <VBox fx:id="methodVBox" prefHeight="371.0" prefWidth="256.0" />
            </children>
         </HBox>
      </content>
   </ScrollPane>
   <HBox>
      <children>
         <TextField fx:id="sendInput" prefHeight="26.0" prefWidth="678.0" promptText="Message content" />
          <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onSendButtonClick" prefHeight="26.0" prefWidth="235.0" text="Send!" />
      </children>
   </HBox>
   <HBox prefHeight="21.0" prefWidth="286.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onRefreshButtonClick" prefHeight="26.0" prefWidth="447.0" text="Force refresh!" />
         <CheckBox fx:id="isRest" mnemonicParsing="false" prefHeight="18.0" prefWidth="627.0" text="Use REST instead of XML-RPC" textAlignment="RIGHT" />
      </children>
   </HBox>
   <HBox prefHeight="18.0" prefWidth="521.0">
      <children>
         <Label fx:id="refreshLabel" prefHeight="18.0" prefWidth="350.0" text="Refresh rate:" />
         <Slider fx:id="refreshBar" prefHeight="14.0" prefWidth="507.0" />
      </children>
   </HBox>
</VBox>
